<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.umutsoysal.ajandam.Ogrenci.Duyurular">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <FrameLayout
            android:id="@+id/frameLayout303"
            android:layout_width="fill_parent"
            android:layout_height="58dp"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimary"
            >

            <ImageButton
                android:id="@+id/back"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="left|top"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Duyurular"
                android:layout_gravity="left|top"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="60dp"
                android:textSize="16dp"
                android:textColor="#ffffff" />



        </FrameLayout>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="8dp"
            android:layout_below="@+id/frameLayout303"
            android:background="@drawable/toolbarshadow"/>


        <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="65dp"
            android:id="@+id/bildirimler"
            android:layout_below="@+id/ogrenci"
            android:divider="@null"
            ></ListView>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
