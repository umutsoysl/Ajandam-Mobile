<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/walpaper"
    tools:context="com.umutsoysal.ajandam.LoginPage">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:background="@drawable/logo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26dp"
            android:id="@+id/temp"
            android:textStyle="bold"
            android:layout_below="@+id/logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="cursive"
            android:textColor="#ffffff"
            android:text="Ajandam"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_below="@+id/temp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:fontFamily="serif"
            android:textColor="#ffffff"
            android:text="Bitirme Projesi"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="41dp"
            android:padding="11dp"
            android:fontFamily="serif"
            android:id="@+id/username"
            android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
            android:textColor="#ffffff"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:backgroundTint="#60000000"
            android:textColorHint="#ffffff"
            android:background="@drawable/edittext_round"
            android:hint=" Kullanıcı adı yada numara" />
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="41dp"
            android:padding="11dp"
            android:id="@+id/password"
            android:fontFamily="serif"
            android:backgroundTint="#60000000"
            android:textColor="#ffffff"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/username"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textColorHint="#ffffff"
            android:background="@drawable/edittext_round"
            android:hint=" Şifre" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:padding="10dp"
            android:id="@+id/submit"
            android:textColor="#ffffff"
            android:text="Giriş"
            android:fontFamily="serif"
            android:textSize="19dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/password"
            android:layout_marginRight="55dp"
            android:layout_marginLeft="55dp"
            android:background="@drawable/button_round"
            android:hint="password" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lütfen Boşlukları Doldurunuz.!"
            android:textColor="#e90404"
            android:id="@+id/uyari"
            android:fontFamily="serif"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textSize="15dp"
            android:visibility="invisible"
            android:layout_below="@+id/submit"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yardım"
            android:textColor="#f4f4f4"
            android:fontFamily="serif"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="28dp"
            android:layout_marginRight="16dp"
            android:textSize="13dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kullanım Şartları"
            android:textColor="#f4f4f4"
            android:fontFamily="serif"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:textSize="13dp"
            />

</RelativeLayout>

</android.support.constraint.ConstraintLayout>
