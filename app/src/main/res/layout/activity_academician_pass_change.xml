<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.umutsoysal.ajandam.Personel.AcademicianPassChange">
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <FrameLayout
                android:id="@+id/frameLayout01"
                android:layout_width="fill_parent"
                android:layout_height="58dp"
                android:layout_alignParentTop="true"
                android:background="@color/colorPrimary">


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Şifre Yenile"
                    android:layout_gravity="left|top"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="60dp"
                    android:textSize="17dp"
                    android:textColor="#ffffff"/>

            <ImageView
                    android:id="@+id/imageView173"
                    android:layout_width="fill_parent"
                    android:layout_height="15dp"
                    android:layout_marginTop="58dp"
                    android:background="@drawable/toolbar_shadow"/>

            <ImageButton
                    android:id="@+id/back_change"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_gravity="left|top"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/back"/>
            <ImageButton
                    android:id="@+id/ok_pass"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right|top"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/ok_beyaz"/>

        </FrameLayout>
        <ImageView
                android:layout_width="fill_parent"
                android:layout_height="8dp"
                android:layout_below="@+id/frameLayout01"
                android:background="@drawable/toolbarshadow"/>


        <!--  Name Label -->
        <FrameLayout
                android:layout_width="fill_parent"
                android:layout_marginTop="6dp"
                android:layout_height="fill_parent">

            <!-- Password Label -->
            <TextView
                    android:id="@+id/textView18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="85dp"
                    android:text=" Over to change the login pin to the application"
                    android:textColor="#696969"
                    android:layout_marginRight="17dp"
                    android:layout_marginLeft="16dp"
                    android:textSize="14sp"
            />

            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="120dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:theme="@style/EditLabel">
                <EditText android:id="@+id/mevcut_password"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:paddingLeft="15dp"
                          android:textColor="@color/siyah"
                          android:inputType="numberPassword"
                          android:hint="Mevcut Şifre"
                />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="180dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:theme="@style/EditLabel">
                <EditText android:id="@+id/change_password"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:paddingLeft="15dp"
                          android:textColor="@color/siyah"
                          android:inputType="numberPassword"
                          android:hint="Yeni Şifre"
                />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="240dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:theme="@style/EditLabel">

                <EditText
                        android:id="@+id/change_password2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="15dp"
                        android:hint="Yeni Şifre,tekrar"
                        android:inputType="numberPassword"
                        android:textColor="@color/siyah"/>
            </android.support.design.widget.TextInputLayout>


            <TextView
                    android:id="@+id/textView128"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A J A N D A M"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="#303030"
                    android:layout_gravity="center|bottom"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp"
            />


        </FrameLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
